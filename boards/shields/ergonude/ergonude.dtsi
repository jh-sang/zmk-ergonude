#include <zephyr/dt-bindings/pinctrl/nrf-pinctrl.h>

&pinctrl {
    spi3_default: spi3_default {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 17)>;
        };
    };
    spi3_sleep: spi3_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 17)>;
            low-power-enable;
        };
    };

    gpio0_default: gpio0_default {
        group1 {
            psels = <NRF_PSEL(GPIO0, 5, 0)>;  // P0.05 默认状态：GPIO 输入
        };
    };

    gpio0_sleep: gpio0_sleep {
        group1 {
            psels = <NRF_PSEL(GPIO0, 5, 1)>;  // 睡眠状态：低功耗
            low-power-enable;
        };
    };
};

&spi3 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    pinctrl-0 = <&spi3_default>;
    pinctrl-1 = <&spi3_sleep>;
    pinctrl-names = "default", "sleep";

    led_strip: ws2812@0 {
        compatible = "worldsemi,ws2812-spi";
        reg = <0>;
        spi-max-frequency = <4000000>;
        chain-length = <12>;
        spi-one-frame = <0x70>;
        spi-zero-frame = <0x40>;
        color-mapping = <LED_COLOR_ID_GREEN LED_COLOR_ID_RED LED_COLOR_ID_BLUE>;
    };
};

// 禁用充电器 PROG_PIN 功能（如果适用）
    &charger {
        status = "disabled";
    };

    // 强制 P0.05 为 GPIO（如果被其他外设占用）
    &gpio0 {
        pinctrl-0 = <&gpio0_default>;
        pinctrl-1 = <&gpio0_sleep>;
        pinctrl-names = "default", "sleep";
    };