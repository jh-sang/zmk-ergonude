&pinctrl {
    spi3_default: spi3_default {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 17)>;
        };
    };
    spi3_sleep: spi3_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 17)>;
            low-power-enable;  // 低功耗模式
        };
    };
};

&spi3 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    pinctrl-0 = <&spi3_default>;
    pinctrl-1 = <&spi3_sleep>;
    pinctrl-names = "default", "sleep";

    led_strip: ws2812@0 {  // 子节点格式
        compatible = "worldsemi,ws2812-spi";
        reg = <0>;  // SPI 绑定必需
        spi-max-frequency = <4000000>;  // 4MHz 推荐
        chain-length = <5>;  // LED 数量
        spi-one-frame = <0x70>;  // WS2812 '1' 位帧
        spi-zero-frame = <0x40>;  // WS2812 '0' 位帧
        color-mapping = <LED_COLOR_ID_GREEN LED_COLOR_ID_RED LED_COLOR_ID_BLUE>;  // GRB 顺序，常见于 WS2812
    };
};
