#include <zephyr/dt-bindings/pinctrl/nrf-pinctrl.h>

&pinctrl {
    spi3_default: spi3_default {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 17)>;
        };
    };
    spi3_sleep: spi3_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 17)>;
            low-power-enable;
        };
    };

matrix_default: matrix_default {
    group1 {
        psels = <NRF_PSEL(GPIOTE_EVENT_IN, 0, 5)>;  /* 使用 GPIOTE_EVENT_IN 作为占位，如果使用事件驱动矩阵 */
        nordic,drive-mode = <NRF_DRIVE_H0H1>;  /* 高驱动模式 */
        bias-pull-down;  /* 下拉电阻 */
    };
};

matrix_sleep: matrix_sleep {
    group1 {
        psels = <NRF_PSEL(GPIOTE_EVENT_IN, 0, 5)>;
        nordic,low-power-enable;  /* 低功耗模式（可选） */
    };
};
};

&spi3 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    pinctrl-0 = <&spi3_default>;
    pinctrl-1 = <&spi3_sleep>;
    pinctrl-names = "default", "sleep";

    led_strip: ws2812@0 {
        compatible = "worldsemi,ws2812-spi";
        reg = <0>;
        spi-max-frequency = <4000000>;
        chain-length = <12>;
        spi-one-frame = <0x70>;
        spi-zero-frame = <0x40>;
        color-mapping = <LED_COLOR_ID_GREEN LED_COLOR_ID_RED LED_COLOR_ID_BLUE>;
    };
};
